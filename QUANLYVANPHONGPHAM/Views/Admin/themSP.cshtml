@using QUANLYVANPHONGPHAM.Models
@model SanPham
@{
    ViewBag.Title = "themSP";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Độ rộng của form -->
            <h2 class="text-center">Thêm Sản Phẩm Mới </h2>

            @using (Html.BeginForm("themSP", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", style = "display: grid; justify-content: space-evenly;background: aliceblue;border: 1px solid powderblue;border-radius: 10px;padding-block: 10px;" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", new { @class = "control-label" })
                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaLoai, "Loại sản phẩm", new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.MaLoai, (SelectList)ViewBag.LoaiSP, "-- Chọn loại sản phẩm --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GiaBan, "Giá bán", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.GiaBan, new { @class = "form-control", type = "number", min ="0" })
                    @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SoLuongTon, "Số lượng", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.SoLuongTon, new { @class = "form-control", type = "number",min="0" })
                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MoTa, "Mô tả", new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HinhAnh, "Hình ảnh", new { @class = "control-label" })
                    @*@Html.TextBoxFor(m => m.HinhAnh, new { @class = "form-control", type = "file" })*@
                    <input type="file" name="file" class="form-control-file" />
                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                </div>

                <div>
                    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại thông tin bên dưới.", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary ">Lưu sản phẩm</button>
            }
        </div>
    </div>
</div>


